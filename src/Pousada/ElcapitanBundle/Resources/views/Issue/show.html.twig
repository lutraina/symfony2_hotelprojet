{% extends '::base.html.twig' %}

{% block body -%}
    <h1 style="margin-top:50px;">Image</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Num√©ro</th>
                <td>{{ entity.number }}</td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{{ entity.datePublication|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Nom image</th>
                <td>
                	{{ entity.cover }}
                </td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                	<img class="img-responsive image" width="150" src="{{ asset(entity.getCoverWeb) }}"/>
                </td>
            </tr>
        </tbody>
    </table>
    <br/>
	<a class="btn btn-default" href="{{ path('issue_edit', { 'id': entity.id }) }}">
	    Modifier
	</a>
	<br/>
    <ul class="record_actions" style="list-style: none; margin-left:0px; margin-top:10px;">
	    <li>{{ form(delete_form) }}</li>
	</ul>

	
	<a class="btn btn-default" href="{{ path('issue') }}">
	    Voir tous les enregistrements
	</a>
	<br/><br/>
{% endblock %}
